{
    "Id": "DirectReads",
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowDirectReads",
            "Action": [
                "s3:GetObject",
                "s3:GetBucketLocation"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::rstats-on-nix-cache",
                "arn:aws:s3:::rstats-on-nix-cache/*"
            ],
            "Principal": "*"
        }
    ]
}
